<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.bookrecommender.SelezionaLibreriaController"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Seleziona una libreria:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <ComboBox fx:id="comboLibrerie" prefWidth="250"/>

    <Button text="Aggiungi libro" onAction="#aggiungiLibro"/>
</VBox>