<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.bookrecommender.ValutazioneFormController"
            prefWidth="420" prefHeight="520">

    <VBox spacing="15" alignment="TOP_CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <Label text="Aggiungi valutazione" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- STILE -->
        <HBox spacing="10">
            <Label text="Stile:" prefWidth="120"/>
            <Slider fx:id="slStile" min="1" max="10" value="5" blockIncrement="1" majorTickUnit="1"
                    showTickMarks="true" showTickLabels="true"/>
        </HBox>

        <!-- CONTENUTO -->
        <HBox spacing="10">
            <Label text="Contenuto:" prefWidth="120"/>
            <Slider fx:id="slContenuto" min="1" max="10" value="5" blockIncrement="1" majorTickUnit="1"
                    showTickMarks="true" showTickLabels="true"/>
        </HBox>

        <!-- GRADEVOLEZZA -->
        <HBox spacing="10">
            <Label text="Gradevolezza:" prefWidth="120"/>
            <Slider fx:id="slGradevolezza" min="1" max="10" value="5" blockIncrement="1" majorTickUnit="1"
                    showTickMarks="true" showTickLabels="true"/>
        </HBox>

        <!-- ORIGINALITA -->
        <HBox spacing="10">
            <Label text="OriginalitÃ :" prefWidth="120"/>
            <Slider fx:id="slOriginalita" min="1" max="10" value="5" blockIncrement="1" majorTickUnit="1"
                    showTickMarks="true" showTickLabels="true"/>
        </HBox>

        <!-- EDIZIONE -->
        <HBox spacing="10">
            <Label text="Edizione:" prefWidth="120"/>
            <Slider fx:id="slEdizione" min="1" max="10" value="5" blockIncrement="1" majorTickUnit="1"
                    showTickMarks="true" showTickLabels="true"/>
        </HBox>

        <!-- NOTE -->
        <VBox spacing="5">
            <Label text="Note (opzionale):"/>
            <TextArea fx:id="txtNote" prefHeight="90" wrapText="true"/>
        </VBox>

        <!-- INVIA -->
        <Button text="Invia valutazione"
                style="-fx-font-size: 14px;"
                onAction="#inviaValutazione"
                maxWidth="200"/>
    </VBox>

</AnchorPane>
