<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.bookrecommender.LibreriaDettaglioController">

    <top>
        <VBox spacing="10">
            <padding><Insets top="20" left="20" right="20" bottom="10"/></padding>
            <Label fx:id="lblNomeLibreria" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets left="20" right="20" bottom="20"/></padding>

            <Label text="Libri nella libreria:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <ListView fx:id="listLibri" prefHeight="300" />

        </VBox>
    </center>

    <bottom>
        <HBox spacing="15">
            <padding><Insets top="10" bottom="20" left="20" right="20"/></padding>

            <Button text="Aggiungi libro" onAction="#apriSelettoreLibro"/>
            <Button text="Rimuovi libro" onAction="#rimuoviLibro"/>
            <Button text="Consiglia (max 3)" onAction="#consigliaLibri"/>
	    <Button text="Torna alla Home" onAction="#tornaHome"/>
            <Button text="Chiudi" onAction="#chiudi"/>
        </HBox>
    </bottom>

</BorderPane>
