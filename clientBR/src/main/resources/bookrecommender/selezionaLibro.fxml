<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.bookrecommender.ui.controller.SelettoreLibroController"
      spacing="12">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Seleziona un libro" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <TextField fx:id="txtFiltro" promptText="Filtra per titolo..." HBox.hgrow="ALWAYS"/>
        <Button text="Cerca" onAction="#cercaLibri" prefWidth="80"/>
    </HBox>

    <ListView fx:id="listaLibri" prefWidth="420" prefHeight="300"/>

    <HBox spacing="10">
        <Button text="Aggiungi" onAction="#aggiungiLibro" fx:id="btnAggiungi"/>
        <Button text="Annulla" onAction="#annulla"/>
    </HBox>

</VBox>
