<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.bookrecommender.ui.controller.ConsigliController">

    <top>
        <VBox spacing="10" alignment="CENTER">
            <padding><Insets top="20" bottom="10"/></padding>
            <Label fx:id="lblTitoloLibro"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label text="Seleziona fino a 3 libri da consigliare:"/>
        </VBox>
    </top>

    <center>
        <ListView fx:id="listLibri" prefWidth="400" prefHeight="350"
                  style="-fx-font-size: 14px;"
                  VBox.vgrow="ALWAYS"/>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER">
            <padding><Insets top="10" bottom="20"/></padding>
            <Button text="Salva consigli" onAction="#salvaConsigli"/>
            <Button text="Chiudi" onAction="#chiudi"/>
        </HBox>
    </bottom>

</BorderPane>
