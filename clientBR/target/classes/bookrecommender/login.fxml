<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.bookrecommender.ui.controller.LoginController">

    <Label text="Book Recommender - Login" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <TextField fx:id="useridField" promptText="User ID" />
    <PasswordField fx:id="passwordField" promptText="Password" />

    <Button text="Accedi" onAction="#loginAction" />
    <Button text="Registrati" onAction="#goToRegister" />
	<Button text="Entra come Ospite" onAction="#enterAsGuest"
        style="-fx-background-color: #dddddd; -fx-text-fill: black;"/>


</VBox>
