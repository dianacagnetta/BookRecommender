<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.bookrecommender.ui.controller.AggiungiValutazioneController"
      spacing="12">
      
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Aggiungi valutazione" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Stile (1-5):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="fieldStile" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Commento stile:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="fieldCommentoStile" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Contenuto (1-5):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="fieldContenuto" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Commento contenuto:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="fieldCommentoContenuto" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Gradevolezza (1-5):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="fieldGradevolezza" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Commento gradevolezza:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="fieldCommentoGradevolezza" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Originalità (1-5):" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <TextField fx:id="fieldOriginalita" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Commento originalità:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <TextField fx:id="fieldCommentoOriginalita" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Edizione (1-5):" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <TextField fx:id="fieldEdizione" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        <Label text="Commento edizione:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
        <TextField fx:id="fieldCommentoEdizione" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

        <Label text="Commento generale:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
        <TextArea fx:id="fieldCommentoGenerale" GridPane.rowIndex="10" GridPane.columnIndex="1" prefHeight="80"/>
    </GridPane>

    <Button text="Salva valutazione" fx:id="btnSalva" onAction="#salvaValutazione"
            style="-fx-font-size: 14px; -fx-padding: 8 14;"/>

</VBox>
