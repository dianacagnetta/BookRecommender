<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<VBox spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.bookrecommender.ui.controller.CatalogoController">

    <HBox spacing="10">
        <Label text="Tipo ricerca:"/>
        <ComboBox fx:id="comboTipoRicerca" />
        <Label text="Titolo:"/>
        <TextField fx:id="fieldTitolo" promptText="Inserisci titolo"/>
        <Label text="Autore:"/>
        <TextField fx:id="fieldAutore" promptText="Inserisci autore"/>
        <Label text="Anno:"/>
        <TextField fx:id="fieldAnno" promptText="Es. 1999"/>
        <Button text="Cerca" fx:id="btnCerca" onAction="#searchBooks"/>
        <Button text="Torna alla Home" fx:id="btnTornaHome" onAction="#tornaHome"/>
    </HBox>

    <TableView fx:id="tableLibri">
        <columns>
            <TableColumn text="Titolo" fx:id="colTitolo" prefWidth="200"/>
            <TableColumn text="Autore" fx:id="colAutore" prefWidth="150"/>
            <TableColumn text="Anno" fx:id="colAnno" prefWidth="80"/>
            <TableColumn text="Editore" fx:id="colEditore" prefWidth="150"/>
            <TableColumn text="Categoria" fx:id="colCategoria" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>
